{
    "manifest_version": 2,
    "name": "Phishing Link Detector",
    "version": "1.0",
    "description": "Detect phishing links in emails.",
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "webRequest",
      "webRequestBlocking",
      "*://*/"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ]
  }
  